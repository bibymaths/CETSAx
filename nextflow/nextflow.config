params {
    // You can override these on the command line
    epochs = 10
}

process {
    // Default executor (local machine)
    executor = 'local'

    // Error handling
    errorStrategy = 'finish'

    // Label specific settings
    withLabel: gpu {
        maxForks = 1  // Only run 1 GPU job at a time to prevent OOM
        clusterOptions = '--gpus 1' // If using Slurm, otherwise ignored locally
        // If running locally with NVIDIA Docker:
        // containerOptions = '--gpus all'
    }
}